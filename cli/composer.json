    "type": "application",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpOrchestra\\Cli\\": "src/",
            "PhpOrchestra\\Application\\": "../application/src/",
            "PhpOrchestra\\Domain\\": "../domain/src/"
        }
    },
    "authors": [
        {
