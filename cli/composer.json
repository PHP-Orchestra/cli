{
    "name": "php-orchestra/cli",
    "description": "CLI tool for PHP projects orchestration",
    "type": "application",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpOrchestra\\Cli\\": "src/"
        }
    },
    "authors": [
        {
            "name": "RÃºdi Rocha",
            "email": "rudi.rocha@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "php-orchestra/domain": "dev-main",
        "php-orchestra/application": "dev-main",
        "symfony/console": "^6.2",
        "symfony/dependency-injection": "^6.2",
        "symfony/config": "^6.2",
        "symfony/yaml": "^6.2"
        
    },
    "repositories": [
        {
            "type": "path",
            "url": "../application"
        },
        {
            "type": "path",
            "url": "../domain"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^2"
    }
}
